message=$1
if [ -z "$message" ]; then
    message="added by script"
fi
git add .
git commit -a -m "$message"
git push
CONTAINER_ID=$(docker container ls -qf "name=run-spring-boot-demo")
if [ -z "$CONTAINER_ID" ]; then
    cd docker
    docker-compose down
    docker-compose build --no-cache
    docker-compose up -d
else
    winpty docker exec -it $CONTAINER_ID bash spring-boot-demo-core/docker/docker_mvn.sh
fi